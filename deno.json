{
	"exclude": [
		"**/webpack/**",
		"**/node_modules/**",
		"**/dist/**",
		"**/build/**",
		"**/out/**",
		"**/target/**",
		"**/.trunk/**",
		"**/.history/**",
		"_next",
		"dist",
		"build",
		"out",
		"target",
		".trunk",
		".history"
	],
	"compilerOptions": {
		"allowJs": true,
		"lib": ["deno.window"],
		"strict": true
	},
	"lint": {
		"include": ["./"],
		"rules": {
			"tags": ["recommended"],
			"include": ["ban-untagged-todo"],
			"exclude": ["no-unused-vars"]
		}
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 4,
		"semiColons": false,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": ["./"],
		"exclude": [
			"src/testdata/",
			"data/fixtures/**/*.ts",
			"node_modules/, .git/",
			"dist/",
			"build/",
			"out/",
			"target/",
			".trunk",
			".history"
		]
	},
	"test": {
		"include": ["src/"],
		"exclude": ["src/testdata/", "data/fixtures/**/*.ts"],
		"failFast": true
	}
}
